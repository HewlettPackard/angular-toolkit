{
	"compilerOptions": {
		"sourceMap"              : true,
		"experimentalDecorators" : true,
		"moduleResolution"       : "node",
		"module": "esnext",
		"target": "es2015",

		"declaration": false,
		"downlevelIteration": true,
		"importHelpers": true,
		"lib": [
			"es2018",
			"dom"
		],

		"emitDecoratorMetadata"  : true,
		"noEmit"                 : true,
		"watch"					 : true,
		"types"                  : ["jasmine", "core-js"]
	},

	"angularCompilerOptions": {
		"fullTemplateTypeCheck"    : true,
		"strictInjectionParameters": true
	},

	"exclude": [
		"node_modules",
		"e2e",
		"src"
	]
}
